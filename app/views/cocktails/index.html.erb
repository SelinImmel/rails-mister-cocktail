<h1>All Cocktails</h1>
<p>Find me in app/views/cocktail/index.html.erb</p>

<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail), { class: "redirect" } do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random)">
      <p><%= cocktail["name"] %></p>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary rounded mt-2" %>
