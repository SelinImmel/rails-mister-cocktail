<div class="home-banner">
  <h1>Welcome to Selin's</h1>
</div>

<h2>All Cocktails</h2>
<hr class="w-70">

<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail), { class: "redirect" } do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
        <p><%= cocktail["name"] %></p>
        <div id="delete-btn">
          <object data="" type="">
            <%= link_to cocktail_path(cocktail),
            method: :delete,
            data: {confirm: "Do you want to delete this cocktail?"} do %>
              <i class="far fa-times-circle" style="color:#ffffff96"></i>
            <% end %>
          </object>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary rounded mt-2" %>
